{
  "StartAt": "Initialize",
  "States": {
    "Initialize": {
      "Type": "Pass",
      "ResultPath": "$",
      "Parameters": {
        "vars.$": "$$.Execution.Input",
        "_undefined": null
      },
      "Next": "Eval Conditional"
    },
    "Eval Conditional": {
      "Type": "Choice",
      "Choices": [
        {
          "Not": {
            "Or": [
              {
                "Variable": "$.vars",
                "IsPresent": false
              },
              {
                "Variable": "$.vars",
                "IsNull": true
              }
            ]
          },
          "Next": "Conditional True"
        }
      ],
      "Default": "Conditional False"
    },
    "Conditional True": {
      "Type": "Pass",
      "ResultPath": "$.tmp.var",
      "InputPath": "$.vars.name",
      "Next": "Eval Conditional_1"
    },
    "Conditional False": {
      "Type": "Pass",
      "ResultPath": "$.tmp.var",
      "InputPath": "$._undefined",
      "Next": "Eval Conditional_1"
    },
    "Eval Conditional_1": {
      "Type": "Choice",
      "Choices": [
        {
          "Not": {
            "Or": [
              {
                "Variable": "$.vars",
                "IsPresent": false
              },
              {
                "Variable": "$.vars",
                "IsNull": true
              }
            ]
          },
          "Next": "Conditional True_1"
        }
      ],
      "Default": "Conditional False_1"
    },
    "Conditional True_1": {
      "Type": "Pass",
      "ResultPath": "$.tmp.var",
      "InputPath": "$.vars.name",
      "Next": "Evaluate Format('hello{}' ..."
    },
    "Conditional False_1": {
      "Type": "Pass",
      "ResultPath": "$.tmp.var",
      "InputPath": "$._undefined",
      "Next": "Evaluate Format('hello{}' ..."
    },
    "Evaluate Format('hello{}' ...": {
      "Type": "Pass",
      "ResultPath": "$.tmp.eval",
      "Parameters": {
        "value.$": "States.Format('hello{}', $.tmp.var)"
      },
      "Next": "Eval Conditional_2"
    },
    "Eval Conditional_2": {
      "Type": "Choice",
      "Choices": [
        {
          "Not": {
            "Or": [
              {
                "Variable": "$.tmp.eval.value",
                "IsPresent": false
              },
              {
                "Variable": "$.tmp.eval.value",
                "IsNull": true
              },
              {
                "Variable": "$.tmp.eval.value",
                "BooleanEquals": false
              },
              {
                "Variable": "$.tmp.eval.value",
                "StringEquals": ""
              },
              {
                "Variable": "$.tmp.eval.value",
                "StringEquals": "false"
              },
              {
                "Variable": "$.tmp.eval.value",
                "StringEquals": "0"
              },
              {
                "Variable": "$.tmp.eval.value",
                "NumericEquals": 0
              }
            ]
          },
          "Next": "Conditional True_2"
        }
      ],
      "Default": "Conditional False_2"
    },
    "Conditional True_2": {
      "Type": "Pass",
      "ResultPath": "$.tmp.var",
      "InputPath": "$.tmp.var",
      "Next": "Return \"hello\" + args?.na ..."
    },
    "Conditional False_2": {
      "Type": "Pass",
      "ResultPath": "$.tmp.var",
      "Result": "world",
      "Next": "Return \"hello\" + args?.na ..."
    },
    "Return \"hello\" + args?.na ...": {
      "Type": "Pass",
      "InputPath": "$.tmp.var",
      "End": true
    }
  }
}