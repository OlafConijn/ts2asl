{
  "StartAt": "Initialize",
  "States": {
    "Initialize": {
      "Type": "Pass",
      "ResultPath": "$",
      "Parameters": {
        "vars.$": "$$.Execution.Input",
        "_undefined": null
      },
      "Next": "Human Approval"
    },
    "Human Approval": {
      "ResultPath": "$.vars.result",
      "Resource": "arn:aws:states:::lambda:invoke.waitForTaskToken",
      "Parameters": {
        "FunctionName": "sendApprovalEmail",
        "Payload": {
          "taskToken.$": "$$.Task.Token",
          "request.$": "$.vars"
        }
      },
      "Type": "Task",
      "End": true
    }
  }
}